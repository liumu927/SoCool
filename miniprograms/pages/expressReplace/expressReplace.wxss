page {
  background-color: #fff;
}

.body {
  width: 85%;
  margin: 50rpx auto;
  box-shadow: 0 0 20rpx #a1a1a1;
  border-radius: 25rpx;
  padding: 25rpx;
  justify-content: center;
  align-items: center;
}

/* 信息说明 */
.help_content .detail {
  display: flex;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 文本框 */
.help_content .detail textarea {
  border: 1rpx solid #d1d1d1;
  margin-top: 20rpx;
  padding: 20rpx;
  width: 85%;
}

.help_content .detail .getImg {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 60rpx;
  bottom: 40rpx;
  z-index: 10;
}

.help_content .detail .expressCode {
  width: 88%;
  height: 90%;
  position: absolute;
  top: 25rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  width: 95%;
  border-bottom: 2rpx solid #a1a1a1;
  margin: 0 auto;
}

.item .getAddress {
  display: flex;
}

.item .getAddress text {
  text-align: right;
  color: #a1a1a1;
}

.item .getAddress image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.item text:nth-child(2) {
  color: #a1a1a1;
}

.item input {
  text-align: right;
}

.tips {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tips text {
  margin-top: 25rpx;
}

.tips text:nth-child(1) {
  font-size: 28rpx;
  color: #717171;
}

.tips text:nth-child(2) {
  color: #f00;
}

.tips text:nth-child(3) {
  font-size: 26rpx;
}

.tips text:nth-child(4) {
  color: #f00;
  font-weight: bold;
  font-size: 46rpx;
}

.submitBtn {
  width: 85% !important;
  color: #fff;
  background-color: #45bd6d;
  padding: 20rpx 0;
  border-radius: 40rpx;
  margin-top: 60rpx;
  font-weight: 400;
  margin-bottom: 10rpx;
}

.notice {
  color: #1067D1;
  text-align: center;
  margin-bottom: 50rpx;
}