.info {
  width: 80%;
  background-color: #45bd6d;
  display: flex;
  border-radius: 10rpx;
  margin: 0 auto;
  padding: 50rpx 40rpx;
  align-items: center;
}

.info .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.info .name {
  display: flex;
  flex-direction: column;
  color: #fff;
  margin-left: 40rpx;
}

.info .name text:nth-child(2) {
  margin-top: 25rpx;
}

.info .shouquan {
  width: 45%;
  border-radius: 20px;
  padding: 5rpx;
}

/* 右侧箭头 */
.info .into {
  width: 50rpx;
  height: 50rpx;
  margin-left: auto;
}

/* 选项栏 */
.cell {
  display: flex;
  width: 90% !important;
  background-color: #fff;
  margin: 0 auto;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  margin-top: 6rpx;
  font-weight: 400;
}

.cell .cellLeft {
  display: flex;
  align-items: center;
}

.cell .cellLeft image {
  width: 50rpx;
  height: 50rpx;
}

.cell .cellLeft text {
  margin-left: 30rpx;
}

.cell .cellRight {
  color: #c1c1c1;
}

/* “添加提示” */
.customerService .tips {
  /* background-color: #45bd6d; */
  background-image: linear-gradient(#abd2f7e7,#7cb9f3e7, #3898f1e7);
  width: 60%;
  padding: 10rpx 20rpx;
  margin-bottom: -10rpx;
  color: rgb(252, 248, 250);
  text-align: center;
  font-size: 22rpx;
  position: relative;
  right: -220rpx;
  border-radius: 20rpx 20rpx 0  0;
}

/* 大间距 */
.mt {
  margin-top: 20rpx;
}

.version {
  color: #a1a1a1;
  width: 100%;
  text-align: center;
}
