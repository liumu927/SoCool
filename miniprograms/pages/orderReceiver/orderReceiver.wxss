.body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.body .noneImg {
  width: 200rpx;
  height: 200rpx;
  margin-top: 40rpx;
}

.body .noneData,
.showAll {
  color: #717171;
  margin-top: 40rpx;
